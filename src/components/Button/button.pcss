.button {
    width: 100%;
    height: 37px;
    color: var(--gray-300);
    background-color: var(--white);
    font-size: 14px;
    line-height: 14px;
    font-weight: 500;
    padding: 0;
    margin: 0;
    border: none;
    border-radius: 8px;

    &--primary {
        background-color: var(--blue);
        color: var(--white);

        &:hover {
            cursor: pointer;
            background-color: var(--blue-hover);
        }
    }
}
