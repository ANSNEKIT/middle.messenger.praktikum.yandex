.chat {
    display: flex;
    width: 100vw;
    height: 100%;

    &__aside {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 320px;
        border-right: 1px solid var(--gray-border);
    }

    &__main {
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        display: flex;
        flex-direction: column;
    }
}
