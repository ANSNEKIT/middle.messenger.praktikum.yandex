{
  "name": "ya-middle-messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "start": "vite build && node server.mjs",
    "lint:eslint": "eslint --fix \"src/**/*.{ts,js,json,pcss}\"",
    "lint:prettier": "prettier --write \"src/**/*.{ts,js,json,pcss}\"",
    "lint:stylelint": "stylelint --fix \"**/*.pcss\"",
    "test": "jest",
    "fix-code": "npm-run-all -s lint:**",
    "validate": "npm-run-all -s fix-code test",
    "prepare": "husky install",
    "pre-commit": "npm run validate"
  },
  "engines": {
    "node": "~20.18.3",
    "npm": ">=11.0.0"
  },
  "devDependencies": {
    "@bufbuild/jest-environment-jsdom": "^0.1.1",
    "@eslint/js": "^9.13.0",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "postcss-nested": "^6.2.0",
    "postcss-preset-env": "^10.0.6",
    "prettier": "3.3.3",
    "stylelint": "^16.10.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.11.0",
    "uuid": "^11.0.0",
    "vite": "^4.5.9",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "dependencies": {
    "express": "^4.21.1"
  }
}
